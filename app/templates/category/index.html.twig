{% extends 'base.html.twig' %}

{% block title %}new category{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/table.css') }}">
{% endblock %}
{% block body %}
    <script>
        var counter = 0;
        function myFunction() {
            if (counter <= 10) {
                counter++;
                var id1 = "recipe_form_ingredient".concat(counter.toString())
                var id2 = "recipe_form_ingredient_count".concat(counter.toString())
                var id3 = "recipe_form_ingredient_unit".concat(counter.toString())
                var x = document.getElementById(id1);
                x.style.display = "inline";
                x = document.getElementById(id2);
                x.style.display = "inline";
                x = document.getElementById(id3);
                x.style.display = "inline";
            }
        }
    </script>

    <div class="title-color title">
        <h1>Categories</h1>
    </div>
<div style="background: #b7b7b7">
    <div class="example-wrapper content-blok" >
        <div class="table-wrapper">
            <table class="fl-table">
                <thead>
                <tr>
                    <th>name</th>
                    <th>action</th>
                </tr>
                </thead>
                <tbody>
                {% if  categories is empty %}
                    <tr>
                        <td colspan="7">you don't have any categories :(</td>
                    </tr>
                {% endif %}
                {% for c in categories %}
                    <tr>
                        <td>{{ c.name }}</td>
                        <td>
                            <a class="btn btn-dark btn-bg" href="{{ path('category_edit' , {id: c.getId}) }}">edit</a>
                            <a class="btn btn-danger btn-bg" onclick='return confirm("Are you sure?")' href="{{ path('category_delete' , {id: c.getId}) }}">delete</a>
                        </td>
                        {#                        <td><a class="btn btn-dark btn-sm" href="{{ path('plant_presets_edit' , {id: c.id}) }}">edit</a></td>#}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a class="btn btn-primary btn-bg" href="{{ path('category_new') }}">add new category</a>
    </div>
</div>

{% endblock %}
