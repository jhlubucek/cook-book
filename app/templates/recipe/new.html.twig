                {{ form_widget(form.ingredients.ingredient_amount_5) }}
                {{ form_widget(form.ingredients.ingredient_unit_5) }}
                {{ form_widget(form.ingredients.ingredient_name_6) }}
                {{ form_widget(form.ingredients.ingredient_amount_6) }}
                {{ form_widget(form.ingredients.ingredient_unit_6) }}
                {{ form_widget(form.ingredients.ingredient_name_7) }}
                {{ form_widget(form.ingredients.ingredient_amount_7) }}
                {{ form_widget(form.ingredients.ingredient_unit_7) }}
                {{ form_widget(form.ingredients.ingredient_name_8) }}
                {{ form_widget(form.ingredients.ingredient_amount_8) }}
                {{ form_widget(form.ingredients.ingredient_unit_8) }}
                {{ form_widget(form.ingredients.ingredient_name_9) }}
                {{ form_widget(form.ingredients.ingredient_amount_9) }}
                {{ form_widget(form.ingredients.ingredient_unit_9) }}
                {{ form_widget(form.ingredients.ingredient_name_10) }}
                {{ form_widget(form.ingredients.ingredient_amount_10) }}
                {{ form_widget(form.ingredients.ingredient_unit_10) }}
            </div>

            <a id="add_ingredient" class="btn btn-secondary" style="margin-top: 10px; margin-bottom: 10px" onclick="myFunction()">add ingredient</a><br>
            {{ form_widget(form.save) }}
        </div>
    </div>
    {{ form_end(form) }}

